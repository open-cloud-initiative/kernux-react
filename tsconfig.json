{
  "compilerOptions": {
    "module": "es2020",
      "target": "es2017",
      "strict": true,
      "declaration": true,
      "outDir": "dist",
      "removeComments": true,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "allowSyntheticDefaultImports": true,
  },
  "exclude": ["node_modules", "dist", "**/dist/**", "**/node_modules/**"]
}
